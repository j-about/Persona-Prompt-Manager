{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Persona Prompt Manager",
	"identifier": "com.persona-prompt-manager.app",
	"version": "0.2.0",
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../build"
	},
	"bundle": {
		"active": true,
		"targets": ["deb", "rpm"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"app": {
		"windows": [
			{
				"title": "Persona Prompt Manager",
				"width": 1280,
				"height": 720,
				"resizable": false,
				"fullscreen": false
			}
		],
		"security": {
			"headers": {
				"Cross-Origin-Opener-Policy": "same-origin",
				"Cross-Origin-Embedder-Policy": "require-corp",
				"X-Content-Type-Options": "nosniff"
			},
			"csp": {
				"default-src": "'self'",
				"script-src": "'self'",
				"style-src": "'self' 'unsafe-inline'",
				"img-src": "'self' asset: http://asset.localhost data:",
				"font-src": "'self' asset: http://asset.localhost",
				"connect-src": "ipc: http://ipc.localhost",
				"media-src": "'self' asset: http://asset.localhost",
				"object-src": "'none'",
				"base-uri": "'self'",
				"form-action": "'self'",
				"frame-ancestors": "'none'",
				"worker-src": "'self' blob:",
				"child-src": "'self' blob:"
			}
		}
	},
	"plugins": {
		"opener": {},
		"process": {},
		"os": {}
	}
}
